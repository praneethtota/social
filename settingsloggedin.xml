<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/idsettingsin"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#FFFFFF">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="MobileSwan" 
    android:visibility="visible" 
    android:typeface="normal" 
    android:enabled="true" 
    android:textSize="24sp" 
    android:padding="10dp" 
    android:gravity="center" 
    android:editable="true" 
    android:bufferType="editable" 
    android:background="#C3D9FF" 
    android:textColor="#FF0000"></TextView>
 <LinearLayout android:id="@+id/LinearLayoutlog1"
 android:layout_height="50sp" android:orientation="horizontal" 
 android:layout_width="fill_parent" 
 android:background="#C3D9FF">
 
<TextView 
android:gravity="left"
android:id="@+id/TextViewlogin" android:textSize="20sp" 
android:layout_height="fill_parent" android:layout_weight="0.50" 
android:layout_width="wrap_content" android:textColor="#FF0000" 
android:text="">
</TextView>    


<Button 
  android:layout_width="40sp"
  android:layout_height="wrap_content" 
  android:text="Change user" 
  android:id="@+id/Changeusr" 
  android:textSize="12sp" 
  android:layout_weight="0.3">
  </Button>
</LinearLayout>    
<ListView android:id="@+id/settinglist" 
android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1">
</ListView>
<LinearLayout android:id="@+id/LinearLayout01"
 android:layout_height="wrap_content" android:orientation="horizontal" 
 android:layout_width="fill_parent" android:layout_gravity="center">
 <ImageButton android:id="@+id/Searchlin" 
    android:src="@drawable/home" 
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_gravity="bottom" android:layout_weight="1" ></ImageButton>

<ImageButton android:id="@+id/Friendslin" 
    android:src="@drawable/friendi"
    android:layout_weight="1" android:layout_gravity="center"
    
    android:layout_width="wrap_content" 
    android:layout_height="match_parent"></ImageButton>
    
    <ImageButton android:id="@+id/Settingslin" 
    android:src="@drawable/options" 
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_gravity="bottom" android:layout_weight="1" ></ImageButton>

<Button android:layout_width="wrap_content" android:layout_height="match_parent" 
android:text="Interest" android:id="@+id/Intlin" android:textSize="12sp" 
android:layout_weight="1"></Button>
</LinearLayout>

</LinearLayout>



