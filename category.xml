

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/idcategory"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#FFFFFF">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="MobileSwan" 
    android:visibility="visible" 
    android:typeface="normal" 
    android:enabled="true" 
    android:textSize="24sp" 
    android:padding="10dp" 
    android:gravity="center" 
    android:editable="true" 
    android:bufferType="editable" 
    android:background="#C3D9FF" 
    android:textColor="#FF0000"></TextView>
 
<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/Cgridview"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:columnWidth="90dp"
    android:numColumns="auto_fit"
    android:verticalSpacing="10dp"
    android:horizontalSpacing="10dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:layout_weight="1">
    </GridView>
<LinearLayout android:id="@+id/CLinearLayout01" android:layout_gravity="bottom" 
android:layout_width="fill_parent" android:layout_height="wrap_content">
<Button android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="Search" android:id="@+id/Search" 
android:textSize="12sp" android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="Friends" android:id="@+id/Friends" android:textSize="12sp" 
android:paddingLeft="20sp" android:paddingRight="20sp" android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="settings" android:gravity="center" android:id="@+id/Settings" 
android:textSize="12sp" android:paddingLeft="20sp" android:paddingRight="20sp" 
android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="match_parent" 
android:text="Map" android:id="@+id/Map" android:textSize="12sp" android:layout_weight="1"></Button>
</LinearLayout>


</LinearLayout>