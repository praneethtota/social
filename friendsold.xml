<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content" android:layout_height="wrap_content"
android:background="#FFFFFF"
android:orientation="vertical">
<RelativeLayout android:layout_width="wrap_content"
android:layout_height="wrap_content" android:id="@+id/top_control_bar">
  <Button android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:text="Message-Send" android:id="@+id/Sendfrnd" 
  android:textSize="12sp"
   android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_gravity="center" 
    android:layout_weight="1.0"></Button>
</RelativeLayout>
<LinearLayout android:id="@+id/bottom_control_bar"
android:layout_width="fill_parent" android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_alignParentBottom="true"
>
 <Button android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:text="Search" 
  android:id="@+id/Search" 
  android:textSize="12sp" 
  android:layout_weight="1">
  </Button>
  <Button android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:text="Friends" android:id="@+id/Friends" 
  android:textSize="12sp"
   android:paddingLeft="20sp"
    android:paddingRight="20sp"
     android:layout_weight="1">
     </Button>
     <Button android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:text="settings"
        android:gravity="center" 
        android:id="@+id/Settings" 
        android:textSize="12sp" 
        android:paddingLeft="20sp" 
        android:paddingRight="20sp" 
        android:layout_weight="1">
        </Button>
        <Button android:layout_width="wrap_content" android:layout_height="match_parent" 
        android:text="Map" android:id="@+id/Map" android:textSize="12sp" android:layout_weight="1"></Button>

</LinearLayout>
<ListView 
android:id="@android:id/list" 
android:layout_width="fill_parent"
android:cacheColorHint="#FFFFFF"
android:layout_height="fill_parent"
android:layout_below="@id/top_control_bar" android:layout_above="@id/bottom_control_bar"></ListView>

</RelativeLayout>