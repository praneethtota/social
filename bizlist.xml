<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/LinearLayoutbl1" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:background="#C3D9FF" 
android:orientation="vertical">
<ListView android:id="@+id/bzlist" 
android:layout_width="fill_parent" android:layout_height="fill_parent" 
android:scrollingCache="true"
android:cacheColorHint="#C3D9FF"
android:layout_weight="1">
</ListView>

<LinearLayout android:id="@+id/LinearLayoutbl2" android:layout_gravity="bottom" 
android:layout_width="fill_parent" android:layout_height="wrap_content">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Search" android:id="@+id/Search" android:textSize="12sp" android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Friends" android:id="@+id/Friends" android:textSize="12sp" android:paddingLeft="20sp" android:paddingRight="20sp" android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="settings" android:gravity="center" android:id="@+id/Settings" android:textSize="12sp" android:paddingLeft="20sp" android:paddingRight="20sp" android:layout_weight="1"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Map" android:id="@+id/Mapover" android:textSize="12sp" android:layout_weight="1"></Button>
</LinearLayout>


</LinearLayout>
